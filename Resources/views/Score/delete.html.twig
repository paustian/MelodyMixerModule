{# purpose of this template: scores delete confirmation view #}
{% extends routeArea == 'admin' ? '@PaustianMelodyMixerModule/adminBase.html.twig' : '@PaustianMelodyMixerModule/base.html.twig' %}
{% trans_default_domain 'score' %}
{% block title 'Delete score'|trans %}
{% block admin_page_icon 'trash-alt' %}
{% block content %}
    <div class="paustianmelodymixermodule-score paustianmelodymixermodule-delete">
        <p class="alert alert-warning">{% trans with {'%name%': score|paustianmelodymixermodule_formattedTitle} %}Do you really want to delete this score: "%name%" ?{% endtrans %}</p>

        {% form_theme deleteForm with [
            '@PaustianMelodyMixerModule/Form/bootstrap_4.html.twig',
            '@ZikulaFormExtension/Form/form_div_layout.html.twig'
        ] only %}
        {{ form_start(deleteForm) }}
        {{ form_errors(deleteForm) }}

        <fieldset>
            <legend>{% trans from 'messages' %}Confirmation prompt{% endtrans %}</legend>
            <div class="form-group row">
                <div class="col-md-9 offset-md-3">
                    {{ form_widget(deleteForm.delete) }}
                    {{ form_widget(deleteForm.cancel) }}
                </div>
            </div>
        </fieldset>
        {{ form_end(deleteForm) }}
    </div>
{% endblock %}
